<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/common_grey300</item>
        <item name="colorAccent">@color/teala40087</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="drawer">
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="BoldText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="editContactField">
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/edit_contact_margin</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivitiesBackground">
        <item name="android:background">@color/common_grey50</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/common_grey100</item>
        <item name="android:textColorPrimary">@color/black87</item>
        <item name="android:textColorSecondary">@color/black87</item>
        <item name="actionMenuTextColor">@color/black87</item>
    </style>

</resources>
