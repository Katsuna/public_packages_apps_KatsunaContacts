<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:visibility="gone" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_top_bottom"
        android:layout_marginBottom="@dimen/text_margin_top_bottom"
        android:layout_marginLeft="@dimen/text_margin_left_right"
        android:layout_marginStart="@dimen/text_margin_left_right"
        android:layout_marginRight="@dimen/text_margin_left_right"
        android:layout_marginEnd="@dimen/text_margin_left_right"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
