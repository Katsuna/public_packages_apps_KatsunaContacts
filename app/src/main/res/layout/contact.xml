<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/largeSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:textColor="@color/pink"
        android:textSize="45sp"
        android:visibility="gone" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/separator"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/text_margin_top_bottom"
            android:layout_marginEnd="@dimen/text_margin_left_right"
            android:layout_marginLeft="@dimen/text_margin_left_right"
            android:layout_marginRight="@dimen/text_margin_left_right"
            android:layout_marginStart="@dimen/text_margin_left_right"
            android:layout_marginTop="@dimen/text_margin_top_bottom"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/pink"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/text_margin_top_bottom"
            android:layout_marginEnd="@dimen/text_margin_left_right"
            android:layout_marginLeft="@dimen/text_margin_left_right"
            android:layout_marginRight="@dimen/text_margin_left_right"
            android:layout_marginStart="@dimen/text_margin_left_right"
            android:layout_marginTop="@dimen/text_margin_top_bottom"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>