<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_black12" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="start|center"
        android:minHeight="28dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contact_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:gravity="start|center"
        android:minHeight="28dp"
        android:textColor="@color/common_black54"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/action_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_black12" />

        <LinearLayout
            android:id="@+id/more_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/edit_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/common_ic_edit_black54_28dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/common_edit_contact"
                android:textColor="@color/common_black54"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/common_black12" />

            <TextView
                android:id="@+id/delete_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/common_ic_delete_black54_28dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/common_delete_contact"
                android:textColor="@color/common_black54"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/common_black12" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/action_buttons_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>