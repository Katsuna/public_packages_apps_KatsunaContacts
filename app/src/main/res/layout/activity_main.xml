<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_toolbar" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/contacts_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layoutManager="LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/contact" />

        <TextView
            android:id="@+id/no_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/common_no_contacts"
            android:textSize="@dimen/common_text_size"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/popup_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_black38"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fab_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/new_contact_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize">

                    <Button
                        android:id="@+id/new_contact_button"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/add_contact"
                        android:textAllCaps="false"
                        android:textColor="@color/common_grey50"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/new_contact_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_fab_margin"
                        android:src="@drawable/ic_add_grey50_36dp"
                        app:layout_behavior="com.katsuna.contacts.ui.behaviors.ScrollingFABBehavior" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/search_button"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/common_search"
                        android:textAllCaps="false"
                        android:textColor="@color/common_black87"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/search_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_fab_margin"
                        android:src="@drawable/ic_search_black87_36dp"
                        app:layout_behavior="com.katsuna.contacts.ui.behaviors.ScrollingFABBehavior" />

                </LinearLayout>

            </LinearLayout>

            <io.codetail.widget.RevealFrameLayout
                android:id="@+id/fab_toolbar_container"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <FrameLayout
                    android:id="@+id/fab_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">

                    <LinearLayout
                        android:id="@+id/viewpager_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="?attr/actionBarSize">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <ImageButton
                            android:id="@+id/prev_page_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:src="@drawable/prev_button"
                            android:visibility="invisible"
                            tools:ignore="ContentDescription" />

                        <ImageButton
                            android:id="@+id/next_page_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:src="@drawable/next_button"
                            android:visibility="invisible"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </FrameLayout>

            </io.codetail.widget.RevealFrameLayout>

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_gravity="start"
        app:menu="@menu/drawer"
        app:theme="@style/CommonDrawer" />

</android.support.v4.widget.DrawerLayout>



