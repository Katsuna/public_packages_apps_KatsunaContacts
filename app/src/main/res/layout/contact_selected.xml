<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_basic_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:clipToPadding="false"
    android:elevation="@dimen/common_selection_elevation"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/separator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/photo" />

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:background="@color/common_white"
                android:gravity="end"
                android:padding="10dp"
                android:src="@drawable/edit_button"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/contact_name"
                style="@style/CommonRobotoBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/photo"
                android:layout_toStartOf="@id/edit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:maxLines="5"
                android:textColor="@color/black87"
                android:textSize="@dimen/common_text_size" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:drawablePadding="-30dp"
            android:drawableStart="@drawable/common_ic_call_black87_24dp"
            android:paddingEnd="0dp"
            android:paddingStart="30dp"
            android:text="@string/common_call"
            android:textAllCaps="true"
            android:textColor="@color/black87"
            android:textSize="18sp" />

        <Button
            android:id="@+id/message_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:drawablePadding="-16dp"
            android:drawableStart="@drawable/common_ic_message_grey50_24dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@string/common_message"
            android:textAllCaps="true"
            android:textColor="@color/common_grey50"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>